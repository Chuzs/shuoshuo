<body>
<% include header.ejs %>

<div class="container main">
    <div class="titleBox">
        <div class="titleContent">
            <% if (username === user) { %>
                
                <img class="avatar_l" src="/avatar/<%=cirentouxiang%>" alt=""/>
                
                <h1 class="title"><%=user%>的个人主页</h1>
                <form action="/dosetavatar" method="post"  enctype="multipart/form-data" >
                    <div class="form-group">
                        <p>
                            <label class="selAvatar" for="username">选择头像</label>
                            <input type="file" class="form-control" id="touxiang" name="touxiang">
                            (仅支持JPG,PNG,GIF格式的图片，小于5M)
                        </p>
                    </div>
                    <!-- <button type="submit" class="btn btn-default">上传</button> -->
                </form>
            <% } else { %>
                <img class="avatar_l" src="/avatar/<%=cirentouxiang%>" alt=""/>
                <h1 class="title"><%=user%>的个人主页</h1>
            <% } %>
        </div>
    </div>
    <div class="row col-lg-8 col-lg-offset-2 oneWrap">
        <% for(var i = 0 ; i < cirenshuoshuo.length ; i++){ %>
            <div class="one">
                <p> <%=cirenshuoshuo[i].content%></p>
                <p> <%=cirenshuoshuo[i].datetime%></p>
            </div>
        <% } %>
    </div>
    <% if (!cirenshuoshuo.length) { %>
        <div class="blank">
            <h2>这个人很懒什么都没留下</h2>
        </div>
    <% } %>
</div>

<% include footer.ejs %>
<script src="/js/jquery-1.11.3.min.js"></script>
